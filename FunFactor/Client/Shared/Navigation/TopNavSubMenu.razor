<div class="hidden md:block">
    <div class="ml-4 flex items-center md:ml-6">
        <NotificationsButton />



        <!-- Profile dropdown -->
        <div class="relative ml-3">
            <ProfileButton OnClickedCallback="ToggleMenu" />

            <div class="@($"{(_showSubMenu ? string.Empty : "hidden ")}absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none")" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1">
                <NavMenuLink href="/Profile" class="block px-4 py-2 text-sm text-gray-700" OnLinkClickCallback="ToggleMenu">Your Profile</NavMenuLink>

                <NavMenuLink href="/Settings" class="block px-4 py-2 text-sm text-gray-700" OnLinkClickCallback="ToggleMenu">Settings</NavMenuLink>

            </div>
        </div>
    </div>
</div>


@code {

    private bool _showSubMenu = false;

    private void ToggleMenu()
    {
        _showSubMenu = !_showSubMenu;
        StateHasChanged();
    }

}
