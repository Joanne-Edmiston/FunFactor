    private int GetNextFactor()
    {
        var maxValue = _maxTable * _maxTable;
        var nextFactor = _random.Next(2, maxValue + 1);

        while (!IsFactor(nextFactor))
        {
            nextFactor = _random.Next(2, maxValue + 1);
        }

        return nextFactor;
    }

    private bool IsFactor(int num)
    {
        for (int i = 2; i <= _maxTable; i++)
        {
            if (num <= i) return true;

            if (num % i == 0 && num / i <= _maxTable) return true;
        }

        return false;

    }

    private void OnGameOverModalClose(bool startNewGame)
    {
        _showGameOver = false;

        if (startNewGame)
        {
            StartNewGame();
        }
    }


    public void Dispose()
    {
        _timer?.Dispose();
    }
}
